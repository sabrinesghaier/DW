{% extends 'navbar.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
<link href="{{asset('/css/style.css')}}" rel="stylesheet" media="all">  
 
{% endblock %}
{% block contenuPrincipal %}
    {{ parent() }}


<div class="container">
    <div class="row mb-3">
        <div class="col-3">
        </div>
        <div class="col-5" style="width: 35rem;">
            <div class="">
                {{ form_start(FormulairePublication) }}
                    
                    <div class="danger">
                       
                    </div>
                    
                    <div class="form-group">
                        
                        {{ form_row(FormulairePublication.description) }}
                    </div>
                   

                   
                   
                        {{form_widget(FormulairePublication.publier, { 'value': '' }) }}
           
               {{form_end(FormulairePublication) }}
             </div>
        </div>
        <div class="col-3">
      
        </div>
    </div>

    <div class="row">
        <div class="col-3" style="width: 18rem;">
            <div class="card">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">#JavaScript</li>
                    <li class="list-group-item">#Symfony</li>
                    <li class="list-group-item">#php</li>
                    <li class="list-group-item">#HTML5</li>
                    <li class="list-group-item">#CSS3</li>
                </ul>
            </div>
            
        </div>
        <div class="col-5" style="width: 35rem;">
           
            
                {% for y in publication %}
                <div class="card border-warning mb-3 pub">
                    
                    <div class="row ">
                        <div class="col-2"><img class="img-avatar" src="{{asset('/images/avatar.jpg')}}"></div>
                        <div class="col-9">
                       
                        
                            
                                  {{y.user.firstname ~ ' ' ~ y.user.lastname}} 
                           
                        </div>
                 </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">{{y.description}}</div>
                            <a href=" {{ path('commenter', {'id': y.id }) }}" class="">Commenter</a>
                        </div>
                       


                    </div>
                    {% if  y.commentaire | length != 0 %}
                      <div class="card">
                            {% for c in y.commentaire %}
                                <p class="card-text">{{ c.contenu}}</p>
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
               
                
                {% endfor %}
            
        </div>
        <div class="col-3 " style="width: 18rem;">
            <div class="card">
                <img src="{{asset('/images/surface-u-DikRnIxrI-unsplash.jpg')}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">Profil</h5>
                    <p class="card-text">{{user.firstname ~ ' ' ~ user.lastname}}</p>
                   
                     <a class="nav-link  btn btn-primary"  aria-current="page"  href="{{path('profil')}}">
                      Page profil</a>
                </div>
            </div>
        
        </div>
    </div>
</div>
{% endblock %}    
